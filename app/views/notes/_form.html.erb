<%= form_with(model: note) do |form| %>
  <% if note.errors.any? %>
    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
      <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
      </symbol>
    </svg>

    <div class="alert alert-danger align-items-center" role="alert" id="error_explanation">
      <h4>
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
        <%= t('views.forms.errors', count: note.errors.count) %>
        </h4>
      <div>
        <ul>
          <% note.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, t('views.forms.title'), class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :notify_at, t('views.forms.notify_at'), class: 'form-label' %>
    <%= form.datetime_field :notify_at, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :content, t('views.forms.content'), class: 'form-label' %>
    <%= form.text_area :content, class: 'form-control', rows: 10 %>
  </div>

  <%= form.submit value: t('views.forms.submit'), class: 'btn btn-primary mb-2'%>
<% end %>
